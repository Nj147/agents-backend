# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
+nocsrf
POST    /registerAgent              controllers.RegistrationController.registerAgent()

+nocsrf
POST    /check-agent-login          controllers.AgentLoginController.checkAgentLogin()

+nocsrf
POST    /readAgent                  controllers.ClientController.readAgent()

+nocsrf
POST    /get-agent-details          controllers.ChangeAgentDetailsController.readAgent()

+nocsrf
PATCH   /update-address             controllers.ChangeAgentDetailsController.updateAddress()

+nocsrf
PATCH   /update-contact-number      controllers.ChangeAgentDetailsController.updateContactNumber()

+nocsrf
PATCH   /update-email               controllers.ChangeAgentDetailsController.updateEmail()

+nocsrf
PATCH   /update-correspondence      controllers.ChangeAgentDetailsController.updateCorrespondence()